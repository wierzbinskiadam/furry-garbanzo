datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Person {
  birthday  DateTime?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  surname   String?
  updatedAt DateTime  @updatedAt
}

model Book {
  author    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  personId  String?
  titile    String?
  updatedAt DateTime @updatedAt
}